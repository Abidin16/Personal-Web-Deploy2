    <!-- Form -->
    <div class="container-form-blog d-flex justify-content-center">

      <div class="container-form">
        <p class="h1 text-center" style="margin-top: 30px;">Register</p>

        <form action="/register" method="POST">
          {{! penambahan action & method  }}
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input name="name" type="text" class="form-control" id="name" placeholder="Nama Lengkap Anda" />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="Email" />
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="password" placeholder="Password" />
            <span
              style=" position: absolute;
                            transform: translate(0, -170%);
                            right : 430px;
                            cursor: pointer;"
            >
              <i class="fa fa-eye" aria-hidden="true" id="eye" onclick="toggle()"></i>
            </span>
          </div>

          <script>
            var state= false; 
              function toggle(){
                if(state){ 
                      document.getElementById("password").setAttribute("type", "password"); 
                      document.getElementById("eye").style.color= '#7a797e'; state= false;
                   } 
                   else{
                        document.getElementById("password").setAttribute("type", "text"); 
                        document.getElementById("eye").style.color= '#5887ef'; 
                        state= true; 
                        } 
              }
          </script>

          <div class="d-flex justify-content-star">
            <button type="submit" class="btn bg-orange text-white">Submit</button>
          </div>
        </form>

      </div>
    </div>
    <!-- Akhir Form -->
